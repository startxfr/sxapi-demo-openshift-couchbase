{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "sxapi-demo-openshift-couchbase-template",
        "annotations": {
            "openshift.io/display-name": "SXAPI Demo Couchbase (Ephemeral)",
            "description": "Template for building a full demo application (frontend + api + bot + bucket) using sxapi in an openshift PaaS",
            "iconClass": "icon-nodejs",
            "tags": "startx,demo,sxapi,couchbase",
            "openshift.io/provider-display-name": "STARTX",
            "openshift.io/documentation-url": "https://github.com/startxfr/sxapi-demo-openshift-couchbase/blob/master/README.md",
            "openshift.io/support-url": "https://github.com/startxfr/sxapi-demo-openshift-couchbase/issues/new"
        }
    },
    "message": "Your demo stack started to build in your project. You can use openshift console to observe deployment.",
    "labels": {
        "template": "sxapi-demo-openshift-couchbase-template"
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "startx-${BASE_IMAGE_TAG}",
                "annotations": {
                    "openshift.io/display-name": "Base images startx (${BASE_IMAGE_TAG})",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-${BASE_IMAGE_TAG}",
                    "app": "api",
                    "type": "backend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "couchbase",
                        "annotations": {
                            "openshift.io/display-name": "Couchbase base image (CentOS 7)",
                            "description": "Couchbase base image relying on CentOS 7 and based on startx/sv-couchbase docker image",
                            "iconClass": "icon-couchbase",
                            "version": "centos7",
                            "sampleRepo": "https://github.com/startxfr/docker-images-example-couchbase.git"
                        },
                        "from": {
                            "kind": "DockerImage",
                            "name": "startx/sv-couchbase:centos7"
                        }
                    },
                    {
                        "name": "nodejs",
                        "annotations": {
                            "openshift.io/display-name": "NodeJS base image (${BASE_IMAGE_TAG})",
                            "description": "NodeJS base image relying on ${BASE_IMAGE_TAG} and based on startx/nodejs docker image",
                            "iconClass": "icon-nodejs",
                            "version": "${BASE_IMAGE_TAG}",
                            "sampleRepo": "https://github.com/startxfr/docker-images-example-nodejs.git"
                        },
                        "from": {
                            "kind": "DockerImage",
                            "name": "startx/sv-nodejs:${BASE_IMAGE_TAG}"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "api-${SOURCE_BRANCH}",
                "annotations": {
                    "openshift.io/display-name": "SXAPI Demo - API (${SOURCE_BRANCH})",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-${BASE_IMAGE_TAG}-nodejs",
                    "app": "api-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "annotations": {
                            "openshift.io/display-name": "SXAPI Demo - API (${SOURCE_BRANCH})",
                            "description": "NodeJS API frontend for the SXAPI Demo",
                            "iconClass": "icon-nodejs",
                            "tags": "startx,nodejs,frontend,api,api",
                            "supports": "http,nodejs",
                            "version": "latest"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "www-${SOURCE_BRANCH}",
                "annotations": {
                    "openshift.io/display-name": "SXAPI Demo - WWW (${SOURCE_BRANCH})",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-${BASE_IMAGE_TAG}-nodejs",
                    "app": "www-${SOURCE_BRANCH}",
                    "type": "backend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "annotations": {
                            "openshift.io/display-name": "SXAPI Demo - WWW (${SOURCE_BRANCH})",
                            "description": "NodeJS Web frontend for the SXAPI Demo",
                            "iconClass": "icon-nodejs",
                            "tags": "startx,nodejs,frontend,www",
                            "supports": "http,nodejs",
                            "version": "latest"
                        }
                    }
                ]
            }
        },
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "couchbase-${SOURCE_BRANCH}",
                "creationTimestamp": null,
                "labels": {
                    "app": "couchbase-${SOURCE_BRANCH}",
                    "type": "backend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                }
            },
            "stringData": {
                "COUCHBASE_USER": "${COUCHBASE_USER}",
                "COUCHBASE_PASSWORD": "${COUCHBASE_PASSWORD}"
            }
        },
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "www-${SOURCE_BRANCH}",
                "creationTimestamp": null,
                "labels": {
                    "app": "www-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                }
            },
            "stringData": {
                "DEMO_API": "${DEMO_API}"
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "api-${SOURCE_BRANCH}",
                "labels": {
                    "app": "api-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${WEBHOOK_TOKEN}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${WEBHOOK_TOKEN}"
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "SerialLatestOnly",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/startxfr/sxapi-demo-openshift-couchbase.git",
                        "ref": "${SOURCE_BRANCH}"
                    },
                    "contextDir": "api"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "startx-${BASE_IMAGE_TAG}:nodejs"
                        },
                        "env": [
                            {
                                "name": "SX_VERBOSE",
                                "value": "true"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "api-${SOURCE_BRANCH}:latest"
                    }
                },
                "resources": {}
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "www-${SOURCE_BRANCH}",
                "labels": {
                    "app": "www-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${WEBHOOK_TOKEN}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${WEBHOOK_TOKEN}"
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "SerialLatestOnly",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/startxfr/sxapi-demo-openshift-couchbase.git",
                        "ref": "${SOURCE_BRANCH}"
                    },
                    "contextDir": "www"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "startx-${BASE_IMAGE_TAG}:nodejs"
                        },
                        "env": [
                            {
                                "name": "SX_VERBOSE",
                                "value": "true"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "www-${SOURCE_BRANCH}:latest"
                    }
                },
                "resources": {}
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "api-${SOURCE_BRANCH}",
                "generation": 2,
                "labels": {
                    "app": "api-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 20,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "api-${SOURCE_BRANCH}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "api-${SOURCE_BRANCH}:latest"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 2,
                "test": false,
                "selector": {
                    "app": "api-${SOURCE_BRANCH}",
                    "deploymentconfig": "api-${SOURCE_BRANCH}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "api-${SOURCE_BRANCH}",
                            "type": "frontend",
                            "provider": "startx",
                            "template": "sxapi-demo-openshift-couchbase-template",
                            "deploymentconfig": "api-${SOURCE_BRANCH}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "api-${SOURCE_BRANCH}",
                                "image": " ",
                                "env": [
                                    {
                                        "name": "SX_VERBOSE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SX_DEBUG",
                                        "value": "true"
                                    },
                                    {
                                        "name": "COUCHBASE_SERVICE_HOST",
                                        "value": "couchbase-${SOURCE_BRANCH}"
                                    },
                                    {
                                        "name": "BOT_SERVICE_HOST",
                                        "value": "bot-${SOURCE_BRANCH}"
                                    },
                                    {
                                        "name": "COUCHBASE_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "couchbase-${SOURCE_BRANCH}",
                                                "key": "COUCHBASE_USER"
                                            }
                                        }
                                    },
                                    {
                                        "name": "COUCHBASE_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "couchbase-${SOURCE_BRANCH}",
                                                "key": "COUCHBASE_PASSWORD"
                                            }
                                        }
                                    },
                                    {
                                        "name": "COUCHBASE_BUCKET",
                                        "value": "${COUCHBASE_BUCKET}"
                                    }
                                ],
                                "command": [
                                    "/bin/sx-nodejs"
                                ],
                                "args": [
                                    "run"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "128Mi"
                                    }
                                },
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx-nodejs",
                                            "isLive"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 20,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8080,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 10,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 15,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            },
            "status": {
                "observedGeneration": 2,
                "replicas": 2,
                "updatedReplicas": 1,
                "availableReplicas": 1
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "www-${SOURCE_BRANCH}",
                "generation": 2,
                "labels": {
                    "app": "www-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 20,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%"
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "www-${SOURCE_BRANCH}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "www-${SOURCE_BRANCH}:latest"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 2,
                "test": false,
                "selector": {
                    "app": "www-${SOURCE_BRANCH}",
                    "deploymentconfig": "www-${SOURCE_BRANCH}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "www-${SOURCE_BRANCH}",
                            "type": "frontend",
                            "provider": "startx",
                            "template": "sxapi-demo-openshift-couchbase-template",
                            "deploymentconfig": "www-${SOURCE_BRANCH}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "www-${SOURCE_BRANCH}",
                                "image": " ",
                                "env": [
                                    {
                                        "name": "SX_VERBOSE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SX_DEBUG",
                                        "value": "true"
                                    },
                                    {
                                        "name": "DEMO_API",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "www-${SOURCE_BRANCH}",
                                                "key": "DEMO_API"
                                            }
                                        }
                                    }
                                ],
                                "command": [
                                    "/bin/sx-nodejs"
                                ],
                                "args": [
                                    "run"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "128Mi"
                                    }
                                },
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx-nodejs",
                                            "isLive"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 20,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/health",
                                        "port": 8080,
                                        "scheme": "HTTP"
                                    },
                                    "initialDelaySeconds": 10,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 15,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            },
            "status": {
                "observedGeneration": 2,
                "replicas": 2,
                "updatedReplicas": 1,
                "availableReplicas": 1
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "api-${SOURCE_BRANCH}",
                "labels": {
                    "app": "api-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                },
                "annotations": {
                    "service.alpha.openshift.io/dependencies": "[{\"name\": \"couchbase-${SOURCE_BRANCH}\", \"namespace\": \"\", \"kind\": \"Service\"}]",
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "api-${SOURCE_BRANCH}",
                    "deploymentconfig": "api-${SOURCE_BRANCH}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "www-${SOURCE_BRANCH}",
                "labels": {
                    "app": "www-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "www-${SOURCE_BRANCH}",
                    "deploymentconfig": "www-${SOURCE_BRANCH}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "api-${SOURCE_BRANCH}",
                "labels": {
                    "app": "api-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX",
                    "haproxy.router.openshift.io/balance": "roundrobin"
                }
            },
            "spec": {
                "to": {
                    "kind": "Service",
                    "name": "api-${SOURCE_BRANCH}",
                    "weight": 100
                }
            },
            "status": {
                "ingress": [
                    {
                        "routerName": "router",
                        "conditions": [
                            {
                                "type": "Admitted",
                                "status": "True"
                            }
                        ]
                    }
                ]
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "www-${SOURCE_BRANCH}",
                "labels": {
                    "app": "www-${SOURCE_BRANCH}",
                    "type": "frontend",
                    "provider": "startx",
                    "template": "sxapi-demo-openshift-couchbase-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX",
                    "haproxy.router.openshift.io/balance": "roundrobin"
                }
            },
            "spec": {
                "to": {
                    "kind": "Service",
                    "name": "www-${SOURCE_BRANCH}",
                    "weight": 100
                }
            },
            "status": {
                "ingress": [
                    {
                        "routerName": "router",
                        "conditions": [
                            {
                                "type": "Admitted",
                                "status": "True"
                            }
                        ]
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "SOURCE_BRANCH",
            "displayName": "Application source-code branch",
            "description": "Name of the branch to use for building this application (dev, master, test, prod)",
            "value": "dev",
            "required": true
        },
        {
            "name": "BASE_IMAGE_TAG",
            "displayName": "Base image tag",
            "description": "Base image flavour to use for buidling this application (latest, fc27, fc28, centos6, centos7)",
            "value": "latest",
            "required": true
        },
        {
            "name": "DEMO_API",
            "displayName": "API fqdn",
            "description": "Domain name of the API endpoint to use in this frontend (api-xxxxx.openshift.demo.startx.fr were xxxxx is your project namespace)",
            "value": "api-dev-demo.openshift.demo.startx.fr",
            "required": true
        },
        {
            "name": "WEBHOOK_TOKEN",
            "displayName": "Webhook token",
            "description": "Secret token to use in github, gitlab or other to hook build action when code change",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{24}",
            "required": true
        },
        {
            "name": "CB_BASE_IMAGE_TAG",
            "displayName": "Couchbase release",
            "description": "Couchbase image release to use for buidling cluster nodes and job task (5.1.0, 5.5.0-Mar, 5.5.0-beta)",
            "value": "5.5.0-beta",
            "required": true
        },
        {
            "name": "COUCHBASE_USER",
            "displayName": "Couchbase application user",
            "description": "Database user to create",
            "value": "Administrator",
            "from": "[A-Z0-9]{8}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "COUCHBASE_PASSWORD",
            "displayName": "Couchbase password",
            "description": "Database password of the application user",
            "value": "Administrator123",
            "from": "[A-Z0-9]{16}",
            "generate": "expression",
            "required": true
        },
        {
            "name": "COUCHBASE_BUCKET",
            "displayName": "Couchbase bucket",
            "description": "name of the bucket to create for example",
            "value": "demo",
            "required": true
        },
        {
            "name": "COUCHBASE_BUCKET_TYPE",
            "displayName": "Couchbase bucket type",
            "description": "Bucket type for the couchabse bucket (ephemeral, couchbase or memcache)",
            "value": "ephemeral",
            "required": true
        }
    ]
}